---
import Navigation from '@/components/Navigation.astro';
import "@/styles/global.css"
import '@fontsource/ibm-plex-mono'
import '@fontsource/ibm-plex-sans'
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
  class?: string;
}
---

<script>
import {install} from '@github/hotkey'

document.addEventListener('astro:page-load', () => {
  for (const el of document.querySelectorAll('[data-hotkey]')) {
    install(el as HTMLElement);
  }
})
</script>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
    <slot name="head" />
    <ViewTransitions />
	</head>
	<body class="
    bg-gradient-to-b
    from-slate-50
    to-slate-100

    dark:from-slate-950
    dark:to-slate-800

    text-slate-800
    dark:text-slate-200

    font-mono
  ">
    <main class="py-8 min-h-screen ">
      <Navigation />
      <slot />
    </main>

    <footer class="
      bg-slate-50
      dark:bg-slate-950
      border-t
      border-t-slate-300
      dark:border-t-slate-600
      mt-32
      py-16
      text-center
      space-y-8
      text-slate-400
    ">
      <p>
        &copy; 2023 Neovimconf
      </p>
      <nav class="flex gap-8 justify-center">
        <a href="/toc">Terms and Conditions</a>
        <a href="/imprint">Imprint & Privacy policy</a>
      </nav>
    </footer>
	</body>
</html>
